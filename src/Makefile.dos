vga_gfx.o	:	dos/vga_gfx.c dos/vga_gfx.h
	$(CC) $(CPPFLAGS) $(CFLAGS) dos/vga_gfx.c

vga_asm.o	:	dos/vga_asm.s
	$(AS) $(ASFLAGS) dos/vga_asm.s

clean   :
	del configure.exe
	del config.h
	del core
	del *.o
